<div class='close-btn-area custom-project-title'>
    <a class="right" href="#" class="btn btn-link"><i class="icon-remove" style="font-size:16px;"></i></a>
</div>
<div class="file-pic-area">
    <div class="img"><img src="/os/assets/website/img/filetest.jpg" alt="" style="width:167px;"></div>
	<div class='txt'><label for="" name="name"></label></div>
</div>
<table class="file-pic-area">
    <tr>
        <td><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>下载</a></td>
        <td><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>移动</a></td>
        <td><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>复制到</a></td>
        <td class="last"><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>关注</a></td>
    </tr>
    <tr>
        <td><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>分享</a></td>
        <td><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>收藏</a></td>
        <td><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>重命名</a></td>
        <td class="last"><a href="javascript:;" class="btn btn-link custom-btn"><i class="icon-tag"></i>删除</a></td>
    </tr>
</table>
<div class='file-detail-info'>
	<ul>
		<li name='EntFileInfoView'>
			<div class="file-obj-title"><a href="javascript:;"><i class='icon-play' name='EntFileInfoView'></i>详细信息</a></div>
			<div id="EntFileInfoView" class="infoview hide">
					<table class="file-info-table">
						<tr>
							<td class="row-title">文件名：</td>
							<td class="row-content" name="name">{{name}}</td>
						</tr>
						<tr>
							<td class="row-title">文件类型：</td>
							<td class="row-content">{{type}}</td>
						</tr>
						<tr>
							<td class="row-title">文件大小：</td>
							<td class="row-content" name="size">{{size}}</td>
						</tr>
						<tr>
							<td class="row-title">创建人：</td>
							<td class="row-content">xxx</td>
						</tr>
						<tr>
							<td class="row-title">创建时间：</td>
							<td class="row-content" name="createTime">{{createTime}}</td>
						</tr>
						<tr>
							<td class="row-title">修改人：</td>
							<td class="row-content"><div class="left">xx</div><div class="right"><a>版本管理</a></div><div class="clear"></div></td>
						</tr>
						<tr>
							<td class="row-title">修改时间：</td>
							<td class="row-content" name="updateTime">{{updateTime}}</td>
						</tr>
					</table>
					<div style="clear:both;"></div>
			</div>
		</li>
		<li name='EntFileshareLinkView'>
			<div class="file-obj-title"><a href="javascript:;"><i class="icon-play" name='EntFileshareLinkView'></i>分享外链</a></div>
			<div id="EntFileshareLinkView" class="infoview hide">
				<a><span name="shareLink"></span></a>
				<div id="no-link">
					<div class="left">未设置分享外链</div>
					<div class="right"><a>设置</a></div>
					<div class="clear"></div>
				</div>
			</div>
		</li>
		<li name='EntFileThumbView'>
			<a href="javascript:;"><i class="icon-play" name='EntFileThumbView'></i>缩略图</a>
			<div id="EntFileThumbView" class="infoview hide">
				<img src="{{ thumb }}"/><label>选择图片：</label><a>浏览</a>
			</div>
		</li>
		<li name='EntFileVersionbView'>
			<div class="file-obj-title"><a href="javascript:;"><i class="icon-play" name='EntFileVersionbView'></i>版本管理</a></div>
			<div id="EntFileVersionbView" class="infoview hide">
				<table>
				<thead>
					<tr>
						<td>版本号</td>
						<td>修改人</td>
						<td>操作</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>V5</td>
						<td>Dirk</td>
						<td><a>恢复</a><a>删除</a></td>
					</tr>
					<tr>
						<td colspan="3"><a>查看更多</a></td>
					<tr>
				</tbody>
			</table>
			</div>
		</li>
		<li name='EntFileRemarkView'>
			<div class="file-obj-title"><a href="javascript:;"><i class="icon-play" name='EntFileRemarkView'></i>备注说明</a></div>
			<div id="EntFileRemarkView" class="infoview" name='remark'>{{remark}}</div>
		</li>
	</ul>
</div>

